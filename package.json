    "quality-gates",
    "method-enterprise-builder"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/exchanet/method_enterprise_builder_planning_cursor.git"
  },
  "scripts": {
    "validate:adrs": "node --experimental-strip-types packs/enterprise-architecture-pack/validators/adr-validator/src/index.ts docs/adr/",
